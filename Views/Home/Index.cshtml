@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Chatvia - Chat Layout Starts -->
<div class="layout-wrapper d-lg-flex">

    <!-- Left Sidebar -->
    <div class="chat-leftsidebar me-lg-1">
        <div class="p-4">
            <div class="d-flex">
                <div class="flex-grow-1">
                    <h5 class="mb-4">Chats</h5>
                </div>
                <div class="flex-shrink-0">
                    <div>
                        <a href="#" class="btn btn-light btn-sm"><i class="fas fa-plus"></i></a>
                    </div>
                </div>
            </div>

            <div class="search-box chat-search-box">
                <div class="input-group bg-light  input-group-lg rounded-3">
                    <input type="text" class="form-control bg-light border-0" placeholder="Search messages or users">
                    <button class="btn btn-light" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="chat-room-list">
            <ul class="list-unstyled chat-list">
                <li class="active">
                    <a href="#">
                        <div class="d-flex">
                            <div class="chat-user-img align-self-center me-3 ms-0">
                                <img src="~/images/avatar-1.jpg" class="rounded-circle avatar-sm" alt="avatar">
                                <span class="user-status"></span>
                            </div>

                            <div class="flex-grow-1 overflow-hidden">
                                <h5 class="text-truncate font-size-15 mb-1">Timona Siera</h5>
                                <p class="chat-user-message text-truncate mb-0">Hey! How's it going?</p>
                            </div>
                            <div class="font-size-11">2:30 PM</div>
                        </div>
                    </a>
                </li>
                <!-- Add more chat items here -->
            </ul>
        </div>
    </div>

    <!-- Chat Content -->
    <div class="user-chat w-100">
        <div class="d-lg-flex">
            <div class="w-100">
                <div class="p-4 border-bottom">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h5 class="font-size-16 mb-1">Timona Siera</h5>
                            <p class="text-muted mb-0">Online</p>
                        </div>
                        <div class="flex-shrink-0">
                            <ul class="list-inline user-chat-nav text-end mb-0">
                                <li class="list-inline-item">
                                    <div class="dropdown">
                                        <a class="dropdown-toggle text-muted px-2" href="#" role="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a class="dropdown-item" href="#">View Profile</a>
                                            <a class="dropdown-item" href="#">Clear Chat</a>
                                            <a class="dropdown-item" href="#">Block</a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Chat messages area -->
                <div class="chat-conversation p-3" data-simplebar style="max-height: 450px;">
                    <ul class="list-unstyled mb-0">
                        <li>
                            <div class="conversation-list">
                                <div class="chat-avatar">
                                    <img src="~/images/avatar-1.jpg" alt="avatar">
                                </div>
                                <div class="ctext-wrap">
                                    <div class="ctext-wrap-content">
                                        <h5 class="font-size-14">Timona</h5>
                                        <p class="mb-0">Hi, how are you?</p>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="right">
                            <div class="conversation-list">
                                <div class="chat-avatar">
                                    <img src="~/images/avatar-2.jpg" alt="avatar">
                                </div>
                                <div class="ctext-wrap">
                                    <div class="ctext-wrap-content">
                                        <h5 class="font-size-14">You</h5>
                                        <p class="mb-0">I’m doing well, thanks!</p>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <!-- Add more messages -->
                    </ul>
                </div>

                <!-- Chat input -->
                <div class="p-3 chat-input-section border-top">
                    <form>
                        <div class="row g-0">
                            <div class="col">
                                <input type="text" class="form-control form-control-lg bg-light border-light"
                                       placeholder="Enter Message..." />
                            </div>
                            <div class="col-auto">
                                <div class="chat-input-links ms-2">
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item">
                                            <button type="submit" class="btn btn-primary chat-send waves-effect waves-light">
                                                <i class="far fa-paper-plane"></i>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div>
<!-- Chatvia - Chat Layout Ends -->
