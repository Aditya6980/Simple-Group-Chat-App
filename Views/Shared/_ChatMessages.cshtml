<!-- Views/Shared/_ChatMessages.cshtml -->
<div class="chat-conversation p-3 px-2" data-simplebar>
    <ul class="list-unstyled mb-0">
        <!-- Received message -->
        <li>
            <div class="conversation-list">
                <div class="chat-avatar">
                    <img src="~/img/avatar-4.jpg" class="rounded-circle avatar-xs" alt="">
                </div>
                <div class="user-chat-content">
                    <div class="ctext-wrap">
                        <div class="ctext-wrap-content">
                            <p class="mb-0">Hi, how are you doing?</p>
                        </div>
                        <div class="conversation-name">
                            <small class="text-muted time">10:00 AM</small>
                            <span class="text-success check-message-icon">
                                <i class="ri-check-double-line align-middle"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </li>

        <!-- Sent message -->
        <li class="right">
            <div class="conversation-list">
                <div class="chat-avatar">
                    <img src="~/img/avatar-1.jpg" class="rounded-circle avatar-xs" alt="">
                </div>
                <div class="user-chat-content">
                    <div class="ctext-wrap">
                        <div class="ctext-wrap-content">
                            <p class="mb-0">I’m good! What about you?</p>
                        </div>
                        <div class="conversation-name">
                            <small class="text-muted time">10:02 AM</small>
                            <span class="text-success check-message-icon">
                                <i class="ri-check-double-line align-middle"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </li>

        <!-- Image message -->
        <li>
            <div class="conversation-list">
                <div class="chat-avatar">
                    <img src="~/img/avatar-4.jpg" class="rounded-circle avatar-xs" alt="">
                </div>
                <div class="user-chat-content">
                    <div class="ctext-wrap">
                        <div class="ctext-wrap-content">
                            <div class="card p-2 mb-2">
                                <img src="~/img/avatar-1.jpg" class="img-fluid rounded" alt="">
                            </div>
                            <p class="mb-0">Check out this photo!</p>
                        </div>
                        <div class="conversation-name">
                            <small class="text-muted time">10:05 AM</small>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>
